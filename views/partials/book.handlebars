<div class="book" 
     data-title="{{title}}" 
     data-author="{{author}}" 
     data-length="{{length}}" 
     data-timesread="{{timesRead}}"
     data-review="{{review}}"
     data-genre="{{genre}}"
     data-image="{{image}}"
     data-id="{{_id}}">  <!-- Ensure _id is used here -->
  <div class="book-contents">
    <div class="book-info-container">
      <span class="book-title">{{title}}</span> <span class="book-author">by {{author}}</span> 
    </div>
    {{#if timesRead}}
      <div class="book-times-read">Read: {{timesRead}} times</div>
    {{/if}}
    {{#if image}}
      <div class="book-image">
         <img src="{{image}}" alt="Book image for {{title}}">
      </div>
    {{/if}}
  </div>
</div>
