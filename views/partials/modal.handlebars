<div id="book-backdrop" class="hidden"></div>
<div id="add-book-modal" class="hidden">
    <div class="modal-dialog">
        <div class="modal-header">
            <h3>Add a Book</h3>
            <button type="button" id="modal-close" class="modal-hide-button">&times;</button>
        </div>
        <div class="modal-body">
            <div class="input-element">
                <label for="title-input">Title</label>
                <textarea id="title-input"></textarea>
            </div>
            <div class="input-element">
                <label for="author-input">Author</label>
                <textarea id="author-input"></textarea>
            </div>
            <div class="input-element">
                <label for="length-input">Number of Pages</label>
                <input type="number" id="length-input">
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" id="modal-accept" class="action-button">Finish</button>
        </div>
    </div>
</div>